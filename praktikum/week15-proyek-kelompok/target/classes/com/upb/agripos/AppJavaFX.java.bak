        dateCell.setCellValue("Tanggal: " + LocalDateTime.now().format(formatter));

        // Statistics section
        Row statsLabelRow = sheet.createRow(3);
        statsLabelRow.createCell(0).setCellValue("RINGKASAN STATISTIK");
        
        Row totalSalesRow = sheet.createRow(4);
        totalSalesRow.createCell(0).setCellValue("Total Penjualan:");
        totalSalesRow.createCell(1).setCellValue(adminView.getTotalPenjualanLabel().getText());

        Row totalTransRow = sheet.createRow(5);
        totalTransRow.createCell(0).setCellValue("Total Produk:");
        totalTransRow.createCell(1).setCellValue(adminView.getTotalTransaksiLabel().getText());

