        // Product list section
        Row productHeaderRow = sheet.createRow(8);
        String[] headers = {"Nama Produk", "Kategori", "Harga", "Stok"};
        for (int i = 0; i < headers.length; i++) {
            Cell cell = productHeaderRow.createCell(i);
            cell.setCellValue(headers[i]);
            cell.setCellStyle(headerStyle);
        }

        // Product data
        try {
            List<Product> products = productService.getAllProducts();
            int rowIndex = 9;
            for (Product product : products) {
                Row productRow = sheet.createRow(rowIndex++);
                productRow.createCell(0).setCellValue(product.getNama());
                productRow.createCell(1).setCellValue(product.getKategori());
                productRow.createCell(2).setCellValue("Rp " + String.format("%.0f", product.getHarga()));
                productRow.createCell(3).setCellValue(product.getStok());
            }
        } catch (DatabaseException e) {
            // Just show empty product list if error
        }

        // Adjust column widths
        sheet.setColumnWidth(0, 25 * 256);
        sheet.setColumnWidth(1, 15 * 256);
        sheet.setColumnWidth(2, 15 * 256);
        sheet.setColumnWidth(3, 10 * 256);

        // Save file
        String filename = "Laporan_Penjualan_" + 
                         LocalDateTime.now().format(DateTimeFormatter.ofPattern("yyyyMMdd_HHmmss")) + 
                         ".xlsx";
        try (FileOutputStream fileOut = new FileOutputStream(filename)) {
            workbook.write(fileOut);
        }
        workbook.close();
    }

