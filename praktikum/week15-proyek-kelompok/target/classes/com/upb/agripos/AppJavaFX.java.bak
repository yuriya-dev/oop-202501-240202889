    /**
     * Load report data dari database untuk admin dashboard.
     */
    private void loadReportData(AdminView adminView) {
        try {
            // Hitung statistik dari produk yang tersedia
            // Note: Untuk implementasi lengkap, perlu menambah tabel transactions di database
            List<Product> products = productService.getAllProducts();
            
            double totalPenjualan = 0;
            int totalTransaksi = 0;
            String produkTerlaku = "-";
            
            if (!products.isEmpty()) {
                // Simulasi: Hitung total dari semua produk (stok terjual = stok awal - stok sekarang)
                // Dalam production: query transaksi dari database
                for (Product product : products) {
                    totalPenjualan += product.getHarga() * product.getStok();
                }
                
                // Ambil produk dengan stok paling rendah sebagai "terlaku"
                Product mostSold = products.stream()
                        .min((p1, p2) -> Integer.compare(p1.getStok(), p2.getStok()))
                        .orElse(null);
                
                if (mostSold != null && mostSold.getStok() < 100) {
                    produkTerlaku = mostSold.getNama();
                }
                
                totalTransaksi = products.size();
            }

            // Update UI dengan data
            adminView.updateReportStatistics(totalPenjualan, totalTransaksi, produkTerlaku);

            // Generate report text
            StringBuilder reportText = new StringBuilder();
            reportText.append("═══════════════════════════════════════════\n");
            reportText.append("           LAPORAN PENJUALAN AGRI-POS\n");
            reportText.append("═══════════════════════════════════════════\n\n");
            reportText.append("Ringkasan Keseluruhan:\n");
            reportText.append("─────────────────────────────────────────────\n");
            reportText.append(String.format("Total Penjualan:    Rp %.0f\n", totalPenjualan));
            reportText.append(String.format("Total Produk:       %d\n", totalTransaksi));
            reportText.append(String.format("Produk Terlaku:     %s\n\n", produkTerlaku));
            
            reportText.append("Daftar Produk dan Stok:\n");
            reportText.append("─────────────────────────────────────────────\n");
            reportText.append(String.format("%-20s %-10s %-10s %-10s\n", "Nama", "Kategori", "Harga", "Stok"));
            reportText.append("─────────────────────────────────────────────\n");
            
            for (Product product : products) {
                reportText.append(String.format("%-20s %-10s Rp %-8.0f %d\n",
                    product.getNama().length() > 20 ? product.getNama().substring(0, 17) + "..." : product.getNama(),
                    product.getKategori(),
                    product.getHarga(),
                    product.getStok()
                ));
            }
            
            reportText.append("─────────────────────────────────────────────\n");
            reportText.append("\nCatatan: Untuk integrasi transaksi lengkap,\n");
            reportText.append("perlu menambahkan tabel 'transactions' di database.\n");

            adminView.setReportContent(reportText.toString());

        } catch (DatabaseException e) {
            adminView.setReportContent("Error loading report: " + e.getMessage());
        } catch (Exception e) {
            adminView.setReportContent("Unexpected error: " + e.getMessage());
        }
    }

